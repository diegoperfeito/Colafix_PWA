    <link href="~/css/materialize.css" type="text/css" rel="stylesheet" media="screen, projection" />
    <link href="~/css/app.css" rel="stylesheet" />
    
    <style>
        label {
            color: black;
        }

        #container {
            position: absolute;
            color: white;
            background-color: #ffbd17;
            width: 100%;
            top: 0;
            bottom: 0;
        }

        #content {
            position: relative;
            float: left;
            top: 50%;
            left: 50%;
            padding: 20px 20px 40px;
            transform: translate(-50%, -50%);
        }
    </style>
</head>
<body>
    
<div id="container">
    <div id="content">
        <div class="row">
            <div class="col-sm-12">
                <label for="loginMail">Usuário de login</label>
                <input id="loginMail" class="form-control"/>
            </div>
            <div class="col-sm-12">
                <label for="loginPassword">Senha</label>
                <input id="loginPassword" class="form-control"/>
            </div>
            <div class="col-sm-12" align="right">
                <button class="btn btn-info waves-effect waves-light" onclick="Logar()">ENTRAR</button>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/notiflix/notiflix-1.9.1.min.js"></script>
<script src="~/js/wow.min.js"></script>
<script src="~/js/materialize.js"></script>
<script src="~/js/init.js"></script>
<script src="~/js/app.js" type="text/javascript"></script>
<script>
    function Logar() {
        const email = document.getElementById("loginMail").value;
        const password = document.getElementById("loginPassword").value;
        if (email.length === 0) {
            window.Notiflix.Report.Warning(
                'Falta informar',
                'Necessário informar seu email',
                'Ok',
                function() {
                    $("#loginMail").focus();
                }
            );
            return;
        }
        if (password.length === 0) {
            window.Notiflix.Report.Warning(
                'Falta informar',
                'Necessário informar sua senha',
                'Ok',
                function() {
                    $("#loginPassword").focus();
                }
            );
            return;
        }

        const o = new Object();
        o.Usuario = email;
        o.Senha = password;

        $.ajax({
            context: this,
            url: '/Main/Login',
            type: 'POST',
            data: JSON.stringify(o),
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            beforeSend: function() {
                Notiflix.Loading.Dots('Aguarde...');
            },
            success: function(data) {
                Notiflix.Loading.Remove();
                const returnData = JSON.parse(data);

                if (returnData.MessageType !== 0) {
                    ShowMessage(data);
                    return;
                }

                localStorage.setItem('USER', JSON.stringify(returnData.EmbeddedData));
                RedirectAction("Menu");
            },
            error: function(data) {
                Notiflix.Loading.Remove();
                ShowError(data);
            }
        });
    }
</script>
</body>
</html>
