@page
@using colafix_pwa.Model
@model colafix_pwa.Pages.ClientesModel
@{
    var clientes = (List<Cli>) ViewData["Clientes"];
}

<div class="row pt-6">
    @foreach (var cliente in clientes)
    {
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    @cliente.Nome
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            @cliente.Fone
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn waves-effect waves-light" type="button" onclick="AddRemoveCli(@cliente.Id, '@cliente.Nome')">Selecionar</button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts
{
    <script>
        $(document).ready(function(){
            ShowCurrentCli();
        });
    </script>
}
